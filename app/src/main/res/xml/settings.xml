<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <ListPreference
        android:key="@string/uploadto"
        android:title="@string/uploadto"
        android:entries="@array/uploadto"
        android:entryValues="@array/uploadto"
        android:defaultValue="@string/installdir"
        android:summary="%s" />

    <EditTextPreference
        android:key="@string/hostname"
        android:title="@string/hostname"
        android:defaultValue="@string/defaulthost"
        android:summary="%s" />

    <EditTextPreference
        android:key="@string/localnameserv"
        android:title="@string/localnameserv"
        android:defaultValue="@string/defLocServer"
        android:summary="%s" />

    <CheckBoxPreference
        android:key="@string/heroku"
        android:title="@string/heroku"
        android:defaultValue="false"/>
</PreferenceScreen>

